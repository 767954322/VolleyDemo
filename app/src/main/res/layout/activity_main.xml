<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.demo.volleydemo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_jiatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家图模式" />


        <Button
            android:id="@+id/bt_shejijia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_jiatu"
            android:text="设计家模式" />


        <TextView
            android:id="@+id/tv_tital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_shejijia"
            android:layout_marginTop="40dp"
            android:text="获取的请求内容："
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tital"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="未获取到数据" />


    </RelativeLayout>

</ScrollView>
